<h1>Products#index</h1>
<% @products.each do |product| %>
    <%= product.name %>
    <%= product.description %>
    <%= product.price %>
    <%= link_to "詳細ページ", product_path(product) %>
    <%= link_to "編集ページ", edit_product_path(product) %>
    <%= link_to "削除する", product_path(product), method: :delete, data: { confirm: '削除してよろしいですか？'} %>
<% end %>

<%= link_to "新しく作成する",  new_product_path %>
